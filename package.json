{
    "name": "@kchips/mcman",
    "version": "1.1.2",
    "description": "Easily manage minecraft servers for development",
    "main": "dist/index.js",
    "type": "module",
    "bin": {
        "mcman": "./dist/index.js"
    },
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "build": "tsc",
        "dev": "tsx src/index.ts",
        "start": "tsx src/index.ts",
        "link": "tsc && bun link",
        "clean": "rm -rf dist",
        "lint": "eslint . --ext .js,.ts",
        "format": "prettier --write .",
        "publish": "tsc && npm publish"
    },
    "dependencies": {
        "pidusage": "^3.0.2",
        "chalk": "^5.4.0",
        "commander": "^13.0.0-0",
        "crypto": "^1.0.1",
        "fs-extra": "^11.2.0",
        "inquirer": "^12.2.0",
        "ora": "^8.1.1",
        "os": "^0.1.2"
    },
    "devDependencies": {
        "@eslint/js": "^9.17.0",
        "@types/fs-extra": "^11.0.4",
        "@types/inquirer": "^9.0.7",
        "@types/js-yaml": "^4.0.9",
        "@types/node": "^20.10.0",
        "@types/pidusage": "^2.0.5",
        "@typescript-eslint/parser": "^8.18.1",
        "eslint": "^9.17.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.2.1",
        "globals": "^15.14.0",
        "prettier": "^3.4.2",
        "tsx": "^4.6.2",
        "typescript": "^5.5.3",
        "typescript-eslint": "^8.18.1"
    },
    "keywords": [
        "minecraft",
        "server",
        "management"
    ],
    "readme": "README.md",
    "homepage": "https://www.npmjs.com/package/@kchips/mcman",
    "bugs": {
        "url": "https://github.com/KartoffelChipss/mcman/issues"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/KartoffelChipss/mcman"
    },
    "author": {
        "name": "KartoffelChipss",
        "email": "contact@strassburger.org",
        "url": "https://strassburger.org"
    }
}